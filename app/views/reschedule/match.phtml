        <td><?= RadioButton($this->reschedule, "game_id", $game->id); ?></td>
        <td><?= $game->start_time; ?> - <?= $game->end_time; ?></td>
        <td><?= $game->home != false ? $game->home : $game->home_club; ?></td>
        <td><?= $game->away != false ? $game->away : $game->away_club; ?></td>
    </tr>
<? endforeach; ?>
</table>
</fieldset>
