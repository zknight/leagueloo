<fieldset>
    <legend>What</legend>
    <table class="form">
        <tr>
            <td><strong>Select category to which event belongs:</strong></td>
            <td><?= SimpleSelect($this->event, 'entity_id', $this->programs); ?></td>
            <td>&nbsp;</td>
        </tr>
        <tr>
            <td><strong>Enter a short title:</strong></td>
            <td><?= TextField($this->event, 'short_title', array('size' => 32)); ?></td>
            <td>Max characters: 32</td>
        </tr>
        <tr>
            <td><strong>Enter title:</strong></td>
            <td colspan="2"><?= TextField($this->event, 'title', array('size' => 80));?></td>
        </tr>
        <tr>
            <td><strong>Description:</strong></td>
            <td colspan="2"><?= TextArea($this->event, 'description', 4, 70); ?></td>
        </tr>
        <tr>
            <td><strong>Location:</strong></td>
            <td colspan="2"><?= TextField($this->event, 'location', array('size' => 80));?></td>
        </tr>
    </table>
</fieldset>
<fieldset>
    <legend>When</legend>
        from
        <?= TextField($this->event, 'start_date', array("id" => "start_date")); ?>
        <? if ($this->event->all_day == false): ?>
        at
        <?= TextField($this->event, 'start_time', array("id" => "start_date")); ?>
        <? endif; ?>
        - to -
        <?= TextField($this->event, 'end_date', array("id" => "start_date")); ?>
        <? if ($this->event->all_day == false): ?>
        at
        <?= TextField($this->event, 'end_time', array("id" => "start_date")); ?><br />
        <? endif; ?>
        <!--input type="hidden" name="Event[all_day]" value="<?= $this->event->all_day; ?>" /-->
        All Day? <!--?= CheckBoxField($this->event, 'all_day'); ?><br /-->
        <!--
        <? $all_day = $this->event->all_day ? "&#x2713" : " "; ?>
        <input type="submit" name="all_day" value="<?= $all_day; ?>" /><br />
        -->
        <?= CheckBoxButton($this->event, "all_day"); ?><br />
        <br />
        This event repeats: 
        daily <?= CheckBoxButton($this->event, 'repeat_daily'); ?>
        weekly <?= CheckBoxButton($this->event, 'repeat_weekly'); ?>
        monthly <?= CheckBoxButton($this->event, 'repeat_monthly'); ?>
        annually <?= CheckBoxButton($this->event, 'repeat_annually'); ?>
    <fieldset>
        <legend>Event Repetition Information</legend>
        <table>
            <tr> 
                <? $days = array("Su", "M", "Tu", "W", "Th", "F", "Sa"); ?>
                <td>Repeat Every:</td>
                <td>
                <? for ($d = 0; $d < 7; $d++): ?>
                    <input type='hidden' name='Event[day_mask][]' value='0' />
                    <input type='checkbox' name='Event[day_mask][]' value='1' />
                    <?= $days[$d]; ?>
                <? endfor; ?>
                </td>
            </tr>
        </table>
    </fieldset>
</fieldset>
