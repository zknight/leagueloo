        <td><?= $refundable->name; ?></td>
        <td><?= l("Request Refund", Path::module('refunds', 'request', $refundable->id)); ?></td>
        <td><?= $refundable->expiry_str; ?>*</td>
    </tr>
<? endforeach; ?>
</table>
<p>
    <em style="font-size:8pt;">*Note: Refunds must be requested on or before the date listed for a given program.  Refund requests will not be honored after this date.</em>
</p>
<?endif;?>
