<h1 class="title">Request a refund</h1>
<p>
<? if (count($this->refundables) == 0): ?>
<p>There are no programs available for refund.</p>
<? else: ?>
<p>Select a program for which you would like a refund:  </p>
<table class="pretty">
    <tr><th colspan="2">Program</th><th>Last date refund is available</th></tr>
<? foreach($this->refundables as $refundable): ?>
